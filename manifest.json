{
  "name": "The Great Suspender",
  "version": "1.1",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js", "html2canvas.min.js"]
    }
  ],
  "browser_action": {
      "default_title": "The Great Suspender",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
